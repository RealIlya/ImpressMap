<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/horizontal_margin"
        android:paddingTop="@dimen/vertical_small_margin"
        android:paddingBottom="@dimen/vertical_small_margin">

        <TextView
            android:id="@+id/address_secondary_view"
            style="@style/settingsItemHeaderTextStyle"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/address_primary_view"
            style="@style/settingsItemSubheaderTextStyle"
            app:layout_constraintTop_toBottomOf="parent"
            tools:text="@tools:sample/cities" />
    </LinearLayout>
</layout>